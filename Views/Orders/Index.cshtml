@model IEnumerable<OnlineShop.Models.Order>

@{
    ViewData["Title"] = "Istoric Comenzi";
}

<div class="container mt-5">
    <h2 class="text-gold mb-4" style="font-family: 'Playfair Display', serif;">Istoric Comenzi</h2>

    @if (Model.Any())
    {
        <div class="accordion" id="ordersAccordion">
            @foreach (var order in Model)
            {
                <div class="accordion-item bg-dark border-secondary mb-3">
                    <h2 class="accordion-header" id="heading-@order.Id">
                        <button class="accordion-button collapsed bg-dark text-light border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@order.Id">
                            <div class="d-flex justify-content-between w-100 me-3">
                                <span>Comanda #@order.Id - @order.Date.ToShortDateString()</span>
                                <span class="text-warning fw-bold">@order.TotalAmount RON</span>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse-@order.Id" class="accordion-collapse collapse" data-bs-parent="#ordersAccordion">
                        <div class="accordion-body border-top border-secondary">
                            <p class="text-muted mb-2">Status: <span class="badge bg-success">@order.Status</span></p>
                            <div class="table-responsive">
                                <table class="table table-dark table-sm table-borderless">
                                    <thead>
                                        <tr>
                                            <th>Produs</th>
                                            <th>Cantitate</th>
                                            <th>Pret Unitar</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in order.OrderDetails)
                                        {
                                            <tr>
                                                <td>@detail.Product.Title</td>
                                                <td>@detail.Quantity</td>
                                                <td>@detail.Price RON</td>
                                                <td>@(detail.Quantity * detail.Price) RON</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-receipt display-1 text-muted mb-3"></i>
            <h3 class="text-light">Nu ai plasat nicio comanda inca</h3>
            <a asp-controller="Products" asp-action="Index" class="btn btn-warning mt-3">Incepe Cumparaturile</a>
        </div>
    }
</div>

<style>
    .accordion-button::after {
        filter: invert(1);
    }
    .accordion-button:not(.collapsed) {
        background-color: #2a2a2a;
        color: var(--gold-primary);
    }
</style>
