<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <header class="py-4 border-bottom border-secondary mb-4" style="border-color: rgba(255,255,255,0.05) !important;">
        <div class="container text-center">
            <!-- Top Bar (User Links) -->
            <div class="d-flex justify-content-end mb-3 small text-uppercase tracking-wide">
                <partial name="_LoginPartial" />
            </div>

            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="brand-centered mb-4">
                A&B Drinks<span class="text-white fs-6 d-block mt-2 tracking-wide font-monospace" style="font-family: var(--font-body) !important;">PREMIUM SELECTION</span>
            </a>

            <!-- Navigation Menu -->
            <nav class="d-flex justify-content-center">
                <ul class="nav-links-custom">
                    <li><a asp-controller="Home" asp-action="Index" class="nav-link-custom">Acasa</a></li>
                    <li><a asp-controller="Products" asp-action="Index" class="nav-link-custom">Catalog</a></li>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Wishlist" asp-action="Index" class="nav-link-custom">Favorite</a></li>
                        <li><a asp-controller="Cart" asp-action="Index" class="nav-link-custom">Cos Cumparaturi</a></li>
                        <li><a asp-controller="Orders" asp-action="Index" class="nav-link-custom">Comenzi</a></li>
                    }

                    @if (User.IsInRole("Colaborator") || User.IsInRole("Administrator"))
                    {
                        <li><a asp-controller="Products" asp-action="Create" class="nav-link-custom text-gold">Propune Produs</a></li>
                        <li><a asp-controller="Products" asp-action="MyProducts" class="nav-link-custom text-gold">Produsele Mele</a></li>
                    }

                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="dropdown position-relative">
                             <a href="#" class="nav-link-custom text-danger dropdown-toggle" data-bs-toggle="dropdown">Admin</a>
                             <ul class="dropdown-menu dropdown-menu-dark bg-dark-surface border-gold mt-2 shadow-lg rounded-0">
                                <li><a class="dropdown-item small text-uppercase py-2" asp-controller="Categories" asp-action="Index">Categorii</a></li>
                                <li><a class="dropdown-item small text-uppercase py-2" asp-controller="Products" asp-action="PendingIndex">Aprobare</a></li>
                                <li><a class="dropdown-item small text-uppercase py-2" asp-controller="Products" asp-action="FaqHistory">Chat History</a></li>
                                <li><hr class="dropdown-divider border-secondary opacity-25"></li>
                                <li><a class="dropdown-item small text-uppercase py-2" asp-controller="CollaboratorRequests" asp-action="Index">Cereri</a></li>
                                <li><a class="dropdown-item small text-uppercase py-2" asp-controller="CollaboratorRequests" asp-action="ManageCollaborators">Colaboratori</a></li>
                                <li><hr class="dropdown-divider border-secondary opacity-25"></li>
                                <li><a class="dropdown-item small text-uppercase py-2" asp-controller="Users" asp-action="Index">Utilizatori</a></li>
                             </ul>
                        </li>
                    }
                    
                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Colaborator") && !User.IsInRole("Administrator"))
                    {
                        <li><a asp-controller="CollaboratorRequests" asp-action="Apply" class="nav-link-custom text-info">Devino Colaborator</a></li>
                    }
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    @* Footer removed as requested
    <footer class="border-top footer text-muted mt-5 pt-4 pb-4">
        <div class="container text-center">
            &copy; 2025 - A&B Drinks - <span class="text-gold">Premium Selection</span> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>