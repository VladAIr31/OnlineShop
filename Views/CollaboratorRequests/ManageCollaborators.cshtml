@model IList<OnlineShop.Models.ApplicationUser>

@{
    ViewData["Title"] = "Gestionare Colaboratori";
}

<div class="container my-5">
    <h2 class="mb-4 text-warning">Gestionare Colaboratori</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-dark border-secondary">Nu exista colaboratori activi momentan.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Status</th>
                        <th class="text-end">Actiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td><span class="badge bg-success">Activ</span></td>
                            <td class="text-end">
                                <form asp-action="Revoke" method="post" class="d-inline" onsubmit="return confirm('Sigur doresti sa revoci drepturile acestui colaborator?');">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-person-x-fill"></i> Revoca Drepturi
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-light">Inapoi la Cereri</a>
    </div>
</div>
