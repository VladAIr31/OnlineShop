@model IEnumerable<OnlineShop.Models.Product>

@{
    ViewData["Title"] = "Produsele Mele";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-gold" style="font-family: 'Playfair Display', serif;">Istoricul Produselor Mele</h2>
        <a asp-action="Create" class="btn btn-warning"><i class="bi bi-plus-lg"></i> Propune Produs Nou</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-dark text-center border-secondary" role="alert">
            Nu ai propus niciun produs momentan. Incepe sa contribui la colectie!
        </div>
    }
    else
    {
        <div class="table-responsive rounded shadow-sm">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="table-secondary text-uppercase small">
                    <tr>
                        <th style="width: 100px;">Imagine</th>
                        <th>Titlu</th>
                        <th>Categorie</th>
                        <th>Pret</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(string.IsNullOrEmpty(item.ImagePath) ? "https://via.placeholder.com/80" : item.ImagePath)" 
                                     class="rounded border border-secondary" 
                                     style="width: 60px; height: 60px; object-fit: cover;" 
                                     alt="@item.Title">
                            </td>
                            <td class="fw-bold text-light">@item.Title</td>
                            <td class="text-muted small">@(item.Category?.Name ?? "-")</td>
                            <td class="text-warning">@item.Price RON</td>
                            <td>
                                @if (item.Status == OnlineShop.Models.ProductStatus.Approved)
                                {
                                    <span class="badge bg-success text-white"><i class="bi bi-check-circle"></i> Aprobat</span>
                                }
                                else if (item.Status == OnlineShop.Models.ProductStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> In Asteptare</span>
                                }
                                else if (item.Status == OnlineShop.Models.ProductStatus.Rejected)
                                {
                                    <span class="badge bg-danger text-white"><i class="bi bi-x-circle"></i> Respins</span>
                                }
                                else 
                                {
                                    <span class="badge bg-secondary">Nedefinit</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
