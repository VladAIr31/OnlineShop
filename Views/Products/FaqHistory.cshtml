@model IEnumerable<OnlineShop.Models.ProductFaq>

@{
    ViewData["Title"] = "Istoric Chat AI";
}

<div class="container my-5">
    <h2 class="mb-4">Istoric Conversa»õii AI</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Nu exista conversatii inregistrate inca.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Data</th>
                        <th>Produs</th>
                        <th>Intrebare Utilizator</th>
                        <th>Raspuns AI</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var faq in Model)
                    {
                        <tr>
                            <td style="min-width: 150px;">@faq.Date.ToLocalTime().ToString("g")</td>
                            <td>
                                @if (faq.Product != null)
                                {
                                    <a asp-action="Details" asp-route-id="@faq.Product.Id" class="fw-bold text-decoration-none">
                                        @faq.Product.Title
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Produs Sters</span>
                                }
                            </td>
                            <td class="text-primary">@faq.Question</td>
                            <td class="text-muted"><small>@faq.Answer</small></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
