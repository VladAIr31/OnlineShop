@model IEnumerable<OnlineShop.Models.Product>

@{
    ViewData["Title"] = "Produse in Asteptare";
}

<div class="container mt-5">
    <h2 class="mb-4">Produse in Asteptare (Admin)</h2>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">
            @TempData["message"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">Nu exista produse in asteptare.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Imagine</th>
                    <th>Titlu</th>
                    <th>Pret</th>
                    <th>Stoc</th>
                    <th>Categorie</th>
                    <th>User ID</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 100px;">
                             <img src="@(string.IsNullOrEmpty(item.ImagePath) ? "https://via.placeholder.com/100" : item.ImagePath)"
                             alt="@item.Title" style="width: 100%; height: auto;">
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Price RON</td>
                        <td>@item.Stock</td>
                        <td>@(item.Category?.Name ?? "-")</td>
                        <td><small>@item.UserId</small></td>
                        <td>
                            <div class="d-flex gap-2">
                                <form asp-action="Approve" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-success btn-sm">Aproba</button>
                                </form>
                                <form asp-action="Reject" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm">Respinge</button>
                                </form>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editeaza</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Inapoi la Lista</a>
    </div>
</div>
